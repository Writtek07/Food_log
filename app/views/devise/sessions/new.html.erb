<div class="columns mt-6 is-centered">
  <div class="column is-one-quarter">
    <h2 class="title is-2">Sign In</h2>

    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", placeholder: "Enter Email" %>
            <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i></span>
            <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <p class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-info", placeholder: "Enter password" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
          </p>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field ml-3">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <%= f.label :remember_me, class: "has-text-justified is-family-monospace is-size-5" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "button is-outlined is-info is-fullwidth" %>
        </div>
      <% end %><br />

      <%= render "devise/shared/links" %>
    
  </div>
</div>